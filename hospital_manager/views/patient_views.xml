<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form-->
    <record id="patient_view_form" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="type" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group col="2">
                        <field name="number" required="1"/>
                        <field name="name" required="1"/>
                        <field name="address"/>
<!--                        <field name="country_id"/>-->
<!--                        <field name="city_id"/>-->
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="date_birth"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Tree-->
    <record id="patient_view_tree" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number"/>
                <field name="name"/>
                <field name="address"/>
<!--                <field name="country_id"/>-->
<!--                <field name="city_id"/>-->
                <field name="email"/>
                <field name="phone"/>
                <field name="date_birth"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!--Action-->
    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">patient</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>


</odoo>