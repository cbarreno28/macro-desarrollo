<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form-->
    <record id="student_view_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="photo" widget="image" class="oe_avatar"/>
                            <field name="name" required="1"/>
                            <field name="age"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="date_birth"/>
                            <field name="register_date"/>
                            <field name="priority" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="campo_text"/>
                        </group>
                        <group>
                            <field name="score_ids">
                                <tree editable="top" create="false">
                                    <field name="value_1" sum="total_value_1"/>
                                    <field name="value_2" sum="total_value_2"/>
                                    <field name="value_3"/>
                                    <field name="total" sum="subtotal"/>
                                    <field name="total_lbl"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

<!--Lista-->
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">student</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="date_birth"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>

<!-- Action    -->
    <record id="student_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>

<!--Menu-->


</odoo>